}
\forLoop[1]{iii}{-5}{\value{iii} < 6}{
  \draw (\arabic{iii} ,  4) node[above]{\arabic{iii}};
}
% yaxis labels
\forLoop[1]{iii}{-4}{\value{iii} < 5}{
  \draw (-5, \arabic{iii} ) node[left]{\arabic{iii}};
}
% yaxis labels
\forLoop[1]{iii}{-4}{\value{iii} < 5}{
  \draw (5, \arabic{iii} ) node[right]{\arabic{iii}};
}
}

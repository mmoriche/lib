\newcommand{\sendToEnd}[4]{
   % MANDATORY ARGUMENTS:
   %   1: label
   %   2: collection
   %   3: caption 
   %   4: content 
   %
   % auxiliary variables
   {\bf \hyperlink{#1:#3}{{#3}}. \hypertarget{#1:#3.back}{ } }
   \begin{collect}{#2}{\par}{\par}
   \newpage
   \hyperlink{#1:#3.back}{{\bf BACK}}
   \hypertarget{#1:#3}{ }
   \subsection{#1}
   \label{collected:#1}
   #4
   \hyperlink{#1:#3.back}{{\bf BACK}}
   \end{collect}
}

